# Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ============================================
# API Security
# ============================================
# API Key for authenticating requests to protected endpoints
# Generate a secure random string (32+ characters recommended)
API_KEY=your-secure-api-key-here

# ============================================
# Application Environment
# ============================================
# Environment: development | production | test
NODE_ENV=development

# ============================================
# OpenAI Configuration (if using AI features)
# ============================================
# OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Rate Limiting Configuration
# ============================================
# Maximum requests per time window (optional overrides)
# RATE_LIMIT_MARKET_INTELLIGENCE=1
# RATE_LIMIT_DATA_OPS=10
# RATE_LIMIT_REPORTS=5
# RATE_LIMIT_CHAT=20
